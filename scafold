import 'package:flutter/material.dart';
void main() {
runApp(
 MaterialApp(
 home: Scaffold(
 appBar: AppBar(
 title: Text(
 'Scaffold SafeArea' ),
 ),
 body: Container(
 child: SafeArea(
 child: Center(
 child: Text(
 'This is sample Text' ),
 ),
 ),
 ),
 ),
 ));
}
